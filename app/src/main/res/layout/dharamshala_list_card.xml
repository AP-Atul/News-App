<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:outlineAmbientShadowColor="@color/colorPrimary"
    android:elevation="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="15dp">


    <RelativeLayout
        android:id="@+id/trendingRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/trendingImage" />

        <TextView
            android:id="@+id/trendingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trendingImage"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Image"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/trendingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trendingImage"
            android:layout_below="@id/trendingTitle"
            android:gravity="left"
            android:maxLines="1"
            android:padding="5dp"
            android:text="City: "
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/trendingDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/trendingAddress"
            android:layout_toRightOf="@id/trendingImage"
            android:gravity="left"
            android:maxLines="8"
            android:padding="5dp"
            android:text="Description: "
            android:textColor="#95000000"
            android:textSize="15sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>